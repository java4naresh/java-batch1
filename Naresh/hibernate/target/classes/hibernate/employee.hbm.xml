<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hibernate.Employee" table="employee" catalog="javabatch1">
        <id name="empId" type="java.lang.Long">
            <column name="empId" />
        </id>
        <property name="empName" type="string">
            <column name="empName" />
        </property>
        <property name="empSalary" type="java.lang.Double">
            <column name="empSalary" />
        </property>
        <property name="empDesignation" type="string">
            <column name="designation" />
        </property>
    </class>
</hibernate-mapping>